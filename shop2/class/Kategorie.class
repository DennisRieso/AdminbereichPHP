<?php

class Kategorie
{

	public $id; 	
	public  $name; 	
	public  $parent_id; 
	public  $bild;	
	private $deleted;

	public function __construct( $in_id = 0 )
	{		
		if( $in_id > 0 )
		{   
			## Kategorie mit id aus DB laden	
			$sql = "SELECT * FROM `kategorien` WHERE `id` = ". intval( $in_id ) ." AND deleted = 0 ;";
			$res = mysqli_query( DB::$connection , $sql );
			
			// ist GENAU 1 datensatz im ResultSet
			if( mysqli_num_rows( $res ) == 1 )
			{
				$row = mysqli_fetch_assoc( $res );
			
				$this->id 		  = $row['id']; 
				$this->name       = $row['name']; 
				$this->parent_id  = $row['parent_id'];
				$this->bild  	  = $row['bild'];    				
				$this->deleted    = $row['deleted']; 	
			}
			// wenn KEIN Datensatzt da ist 
			else if( mysqli_num_rows( $res ) == 0 )
			{
				die( " FEHLER : Keinen Datensatzt trotz ID gefunden !! ( vielleicht gelÃ¶scht ?? ) ");
			}
			else
			{
				die( " PANIC : Mehr als 1 Datensatzt gefunden !!  ");
			}
			
		}		
		else
		{
			## neuer Artikel
			$this->id      = 0;
			$this->deleted = 0;
		}
	}

	
	private function create()
	{
		if( $this->id > 0 )
		{
			echo " Fehler: Create mit ID > 0 versucht !!! ";
			return;
		}
		
		$sql_name      = mysqli_real_escape_string( DB::$connection , $this->name );   
		$sql_parent_id = intval( $this->parent_id );   


		$sql = "INSERT INTO `kategorien` 
				( `name`           , `parent_id`            ) 
				VALUES 
				( '". $sql_name ."', '". $sql_parent_id ."' );";
					
		$res = mysqli_query( DB::$connection , $sql );
		
		if( $res === true )
		{
			$this->id = mysqli_insert_id( DB::$connection );
		}
		else
		{
			echo " Insert ist fehlgeschalgen : ". mysqli_error( DB::$connection );
		}		
	}
	
	
	private function update()
	{
		if( $this->id < 1 )
		{
			echo " Fehler: Update mit ID = 0 versucht !!! ";
			return;
		}
		
		$sql_name      = mysqli_real_escape_string( DB::$connection , $this->name );
		$sql_bild      = mysqli_real_escape_string( DB::$connection , $this->bild );  		
		$sql_parent_id = intval(  $this->parent_id );   
	
		
		$sql = "UPDATE `kategorien` 
					SET 
						`name`        = '". $sql_name ."', 
						`parent_id`   = '". $sql_parent_id ."',
						`bild`   	  = '". $sql_bild . "', 
						`deleted`     = '". $this->deleted ."' 
					
					WHERE `id` = ". intval( $this->id ) ." ;";
		
		
		$res = mysqli_query( DB::$connection , $sql );	

		if( $res === false )
		{
			echo " Update ist fehlgeschalgen : ". mysqli_error( DB::$connection );
		}			
	}


	public function save()
	{
		if( $this->id > 0 )
		{
			$this->update();
		}
		else
		{
			$this->create();
		}
	}


	public function del_it()
	{
		if( $this->id < 1 )
		{
			echo " Fehler: Delete mit ID = 0 versucht !!! ";
			return;
		}			
		
		$this->deleted = 1;

		$this->update();
	}


	public static function getAll()
	{
		$sql = "SELECT `id` FROM `kategorien` WHERE `deleted` = 0; ";  
		$res = mysqli_query( DB::$connection , $sql );
		
		$re_array = array();
		
		while( $row = mysqli_fetch_assoc($res) )
		{
			$re_array[] = $row["id"];
		}
		return $re_array;
	}


	public static function getAllWithName()
	{
		$sql = "SELECT `id`, `name` FROM `kategorien` WHERE `deleted` = 0; ";  
		$res = mysqli_query( DB::$connection , $sql );
		
		$re_array = array();
		
		while( $row = mysqli_fetch_assoc($res) )
		{
			$re_array[$row['id']] = $row['name'];
		}
		return $re_array;
	}

}

